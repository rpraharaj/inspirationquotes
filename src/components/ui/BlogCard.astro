---
/**
 * BlogCard Component
 * 
 * Reusable card for displaying blog post previews
 */
import FormattedDate from '../FormattedDate.astro';
import ReadingTime from './ReadingTime.astro';

interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  heroImage?: string;
  slug: string;
  featured?: boolean;
  body?: string;
}

const { title, description, pubDate, heroImage, slug, featured = false, body } = Astro.props;

// Calculate image size based on featured status
const imageWidth = featured ? 960 : 480;
const imageHeight = featured ? 540 : 270;
---

<article class:list={['group', featured && 'featured-card']}>
  <a href={`/${slug}/`} class="block">
    <div class="aspect-video overflow-hidden rounded-xl bg-background-secondary mb-4 border border-border">
      {heroImage ? (
        <img 
          src={heroImage} 
          alt={`Featured image for ${title}`}
          width={imageWidth}
          height={imageHeight}
          class="w-full h-full object-cover transition-all duration-500 group-hover:scale-105 group-hover:opacity-90"
          loading={featured ? 'eager' : 'lazy'}
          decoding="async"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-foreground-tertiary">
          <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
      )}
    </div>
    
    <div class:list={[featured ? 'max-w-2xl' : '']}>
      <div class="flex items-center gap-3 text-sm text-foreground-tertiary mb-2">
        <FormattedDate date={pubDate} />
        {body && (
          <>
            <span>Â·</span>
            <ReadingTime content={body} />
          </>
        )}
      </div>
      
      <h2 class:list={[
        'font-bold tracking-tight text-foreground transition-colors duration-200',
        'group-hover:text-foreground-secondary',
        featured ? 'text-2xl sm:text-3xl' : 'text-lg sm:text-xl'
      ]}>
        {title}
      </h2>
      
      {description && (
        <p class:list={[
          'text-foreground-secondary mt-3 line-clamp-2',
          featured ? 'text-base' : 'text-sm'
        ]}>
          {description}
        </p>
      )}
      
      <span class:list={[
        'inline-flex items-center gap-1 mt-4 text-sm font-medium',
        'text-foreground-secondary group-hover:text-foreground transition-colors'
      ]}>
        Read article
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </span>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .featured-card {
    grid-column: span 2;
  }
  
  @media (max-width: 640px) {
    .featured-card {
      grid-column: span 1;
    }
  }
</style>
