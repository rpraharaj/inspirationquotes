---
/**
 * HeroSection Component - Ultra Modern Tech Design
 * 
 * Features:
 * - Animated grid background with neural network effect
 * - Floating geometric nodes with CSS animations
 * - Glowing headline with dynamic underline
 * - Glassmorphism stat cards
 * - Staggered entrance animations
 * - 100% CSS-based (no JS for animations)
 */
import Icon from './Icon.astro';
import { siteConfig } from '../../config/site';
import { categories } from '../../config/categories';

interface Props {
  articleCount: number;
}

const { articleCount } = Astro.props;
---

<section class="hero-section">
  <!-- Animated Grid Background -->
  <div class="hero-grid" aria-hidden="true">
    <div class="grid-line grid-line-1"></div>
    <div class="grid-line grid-line-2"></div>
    <div class="grid-line grid-line-3"></div>
    <div class="grid-line grid-line-4"></div>
    <div class="grid-line grid-line-h-1"></div>
    <div class="grid-line grid-line-h-2"></div>
    <div class="grid-line grid-line-h-3"></div>
  </div>

  <!-- Floating Nodes (Neural Network Effect) -->
  <div class="hero-nodes" aria-hidden="true">
    <div class="node node-1"></div>
    <div class="node node-2"></div>
    <div class="node node-3"></div>
    <div class="node node-4"></div>
    <div class="node node-5"></div>
    <div class="node node-6"></div>
    <div class="connecting-line line-1"></div>
    <div class="connecting-line line-2"></div>
    <div class="connecting-line line-3"></div>
  </div>

  <!-- Radial Glow -->
  <div class="hero-glow" aria-hidden="true"></div>

  <div class="hero-content mx-auto max-w-wide px-4 sm:px-6">
    <div class="hero-inner">
      <!-- Badge -->
      <div class="hero-badge">
        <div class="badge-pulse"></div>
        <Icon name="bot" size={16} strokeWidth={2} />
        <span>Welcome to the Future</span>
      </div>

      <!-- Headline -->
      <h1 class="hero-headline">
        <span class="headline-line">AI Agents</span>
        <span class="headline-accent">
          <span class="accent-text">Kit</span>
          <span class="accent-glow"></span>
        </span>
      </h1>

      <!-- Tagline -->
      <p class="hero-tagline">
        {siteConfig.tagline}
      </p>

      <!-- Description -->
      <p class="hero-description">
        Tutorials, code snippets, prompts, and the latest AI updatesâ€”all in one place.
      </p>

      <!-- CTAs -->
      <div class="hero-ctas">
        <a href="/blog" class="cta-primary">
          <span class="cta-text">Browse Articles</span>
          <span class="cta-icon">
            <Icon name="arrow-right" size={16} />
          </span>
          <span class="cta-shine"></span>
        </a>
        <a href="/categories" class="cta-secondary">
          <Icon name="layers" size={16} />
          <span>Explore Categories</span>
        </a>
      </div>

      <!-- Stats Grid -->
      <div class="hero-stats">
        <div class="stat-card">
          <div class="stat-icon">
            <Icon name="file-code" size={20} />
          </div>
          <div class="stat-content">
            <span class="stat-value">{articleCount}+</span>
            <span class="stat-label">Articles</span>
          </div>
        </div>
        
        <div class="stat-divider"></div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <Icon name="layers" size={20} />
          </div>
          <div class="stat-content">
            <span class="stat-value">{categories.length}</span>
            <span class="stat-label">Categories</span>
          </div>
        </div>
        
        <div class="stat-divider"></div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <Icon name="zap" size={20} />
          </div>
          <div class="stat-content">
            <span class="stat-value">Weekly</span>
            <span class="stat-label">Updates</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ============================================
     HERO SECTION - Ultra Modern Tech Design
     ============================================ */

  .hero-section {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    overflow: hidden;
    border-bottom: 1px solid var(--border);
  }

  /* Animated Grid Background */
  .hero-grid {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.4;
  }

  .grid-line {
    position: absolute;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      var(--border) 50%,
      transparent 100%
    );
  }

  .grid-line-1,
  .grid-line-2,
  .grid-line-3,
  .grid-line-4 {
    width: 1px;
    height: 100%;
    top: 0;
  }

  .grid-line-1 { left: 20%; animation: gridPulse 4s ease-in-out infinite; }
  .grid-line-2 { left: 40%; animation: gridPulse 4s ease-in-out 1s infinite; }
  .grid-line-3 { left: 60%; animation: gridPulse 4s ease-in-out 2s infinite; }
  .grid-line-4 { left: 80%; animation: gridPulse 4s ease-in-out 3s infinite; }

  .grid-line-h-1,
  .grid-line-h-2,
  .grid-line-h-3 {
    width: 100%;
    height: 1px;
    left: 0;
    background: linear-gradient(
      to right,
      transparent 0%,
      var(--border) 50%,
      transparent 100%
    );
  }

  .grid-line-h-1 { top: 30%; animation: gridPulseH 5s ease-in-out infinite; }
  .grid-line-h-2 { top: 50%; animation: gridPulseH 5s ease-in-out 1.5s infinite; }
  .grid-line-h-3 { top: 70%; animation: gridPulseH 5s ease-in-out 3s infinite; }

  @keyframes gridPulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
  }

  @keyframes gridPulseH {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.6; }
  }

  /* Floating Nodes */
  .hero-nodes {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .node {
    position: absolute;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--text-primary);
    opacity: 0.6;
  }

  .node::before {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    border: 1px solid var(--text-primary);
    opacity: 0.3;
    animation: nodePulse 2s ease-out infinite;
  }

  .node-1 { top: 15%; left: 10%; animation: float 8s ease-in-out infinite; }
  .node-2 { top: 25%; right: 15%; animation: float 10s ease-in-out 1s infinite; }
  .node-3 { top: 60%; left: 8%; animation: float 9s ease-in-out 2s infinite; }
  .node-4 { top: 70%; right: 20%; animation: float 11s ease-in-out 3s infinite; }
  .node-5 { top: 40%; left: 25%; animation: float 7s ease-in-out 4s infinite; }
  .node-6 { top: 80%; left: 70%; animation: float 12s ease-in-out 5s infinite; }

  @keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.1); }
  }

  @keyframes nodePulse {
    0% { transform: scale(1); opacity: 0.3; }
    100% { transform: scale(2); opacity: 0; }
  }

  /* Connecting Lines */
  .connecting-line {
    position: absolute;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--border-strong),
      transparent
    );
    transform-origin: left center;
    opacity: 0.5;
  }

  .line-1 {
    top: 20%;
    left: 10%;
    width: 200px;
    transform: rotate(25deg);
    animation: linePulse 3s ease-in-out infinite;
  }

  .line-2 {
    top: 55%;
    right: 15%;
    width: 150px;
    transform: rotate(-15deg);
    animation: linePulse 3s ease-in-out 1s infinite;
  }

  .line-3 {
    top: 75%;
    left: 30%;
    width: 180px;
    transform: rotate(10deg);
    animation: linePulse 3s ease-in-out 2s infinite;
  }

  @keyframes linePulse {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.6; }
  }

  /* Radial Glow */
  .hero-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(
      circle,
      var(--bg-tertiary) 0%,
      transparent 70%
    );
    opacity: 0.5;
    pointer-events: none;
  }

  /* Hero Content */
  .hero-content {
    position: relative;
    z-index: 10;
    width: 100%;
    padding-top: 6rem;
    padding-bottom: 4rem;
  }

  .hero-inner {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  /* Badge */
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem 0.5rem 1.5rem;
    border-radius: 9999px;
    border: 1px solid var(--border);
    background-color: var(--bg-secondary);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    position: relative;
    animation: fadeSlideUp 0.8s ease-out;
  }

  .badge-pulse {
    position: absolute;
    left: 0.75rem;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: var(--text-primary);
    animation: badgePulse 2s ease-in-out infinite;
  }



  @keyframes badgePulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.2); }
  }

  /* Headline */
  .hero-headline {
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
    animation: fadeSlideUp 0.8s ease-out 0.1s backwards;
  }

  .headline-line {
    display: block;
  }

  .headline-accent {
    position: relative;
    display: inline-block;
  }

  .accent-text {
    position: relative;
    z-index: 1;
  }

  .accent-glow {
    position: absolute;
    bottom: 0.15em;
    left: -0.05em;
    right: -0.05em;
    height: 0.35em;
    background-color: var(--border-strong);
    z-index: 0;
    transition: height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-headline:hover .accent-glow {
    height: 0.55em;
    background-color: var(--text-tertiary);
  }

  /* Tagline */
  .hero-tagline {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
    color: var(--text-secondary);
    line-height: 1.4;
    margin-bottom: 1rem;
    margin-left: auto;
    margin-right: auto;
    animation: fadeSlideUp 0.8s ease-out 0.2s backwards;
  }

  /* Description */
  .hero-description {
    font-size: 1rem;
    color: var(--text-tertiary);
    line-height: 1.6;
    margin-bottom: 2.5rem;
    margin-left: auto;
    margin-right: auto;
    animation: fadeSlideUp 0.8s ease-out 0.3s backwards;
  }

  /* CTAs */
  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    animation: fadeSlideUp 0.8s ease-out 0.4s backwards;
  }

  .cta-primary {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.75rem;
    background-color: var(--text-primary);
    color: var(--bg-primary);
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 0.9375rem;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px -10px var(--text-tertiary);
  }

  .cta-icon {
    display: flex;
    transition: transform 0.2s ease;
  }

  .cta-primary:hover .cta-icon {
    transform: translateX(4px);
  }

  .cta-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 60px;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.15),
      transparent
    );
    animation: shine 3s ease-in-out infinite;
  }

  @keyframes shine {
    0% { left: -100%; }
    50%, 100% { left: 150%; }
  }

  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    font-weight: 500;
    font-size: 0.9375rem;
    color: var(--text-primary);
    background-color: transparent;
    transition: all 0.2s ease;
  }

  .cta-secondary:hover {
    background-color: var(--bg-secondary);
    border-color: var(--border-strong);
  }

  /* Stats */
  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
    animation: fadeSlideUp 0.8s ease-out 0.5s backwards;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 0.625rem;
    background-color: var(--bg-secondary);
    border: 1px solid var(--border);
    color: var(--text-secondary);
    transition: all 0.2s ease;
  }

  .stat-card:hover .stat-icon {
    background-color: var(--bg-tertiary);
    border-color: var(--border-strong);
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .stat-value {
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background-color: var(--border);
  }

  /* Fade Slide Up Animation */
  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Dark mode enhancements */
  :global(.dark) .hero-glow {
    opacity: 0.3;
  }

  :global(.dark) .node {
    opacity: 0.5;
  }

  :global(.dark) .cta-shine {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.08),
      transparent
    );
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      min-height: auto;
      padding-top: 5rem;
      padding-bottom: 3rem;
    }

    .hero-content {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }

    .hero-nodes {
      display: none;
    }

    .grid-line-1 { left: 25%; }
    .grid-line-2 { left: 50%; }
    .grid-line-3 { left: 75%; }
    .grid-line-4 { display: none; }

    .hero-stats {
      gap: 1rem;
    }

    .stat-divider {
      display: none;
    }

    .stat-card {
      flex: 1;
      min-width: 140px;
    }
  }

  @media (max-width: 480px) {
    .hero-badge {
      font-size: 0.625rem;
      padding: 0.375rem 0.75rem;
    }

    .stat-card {
      min-width: 120px;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .node,
    .grid-line,
    .connecting-line,
    .badge-pulse,
    .cta-shine {
      animation: none;
    }

    .hero-badge,
    .hero-headline,
    .hero-tagline,
    .hero-description,
    .hero-ctas,
    .hero-stats {
      animation: none;
    }
  }
</style>
