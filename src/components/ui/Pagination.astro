---
/**
 * Pagination Component
 * 
 * Displays pagination controls for blog listing
 */
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl?: string;
}

const { currentPage, totalPages, baseUrl = '/blog' } = Astro.props;

// Generate page numbers to display
function getPageNumbers(current: number, total: number): (number | '...')[] {
  if (total <= 7) {
    return Array.from({ length: total }, (_, i) => i + 1);
  }
  
  const pages: (number | '...')[] = [];
  
  if (current <= 3) {
    pages.push(1, 2, 3, 4, '...', total);
  } else if (current >= total - 2) {
    pages.push(1, '...', total - 3, total - 2, total - 1, total);
  } else {
    pages.push(1, '...', current - 1, current, current + 1, '...', total);
  }
  
  return pages;
}

const pageNumbers = getPageNumbers(currentPage, totalPages);
const prevPage = currentPage > 1 ? currentPage - 1 : null;
const nextPage = currentPage < totalPages ? currentPage + 1 : null;

function getPageUrl(page: number): string {
  return page === 1 ? baseUrl : `${baseUrl}/page/${page}`;
}
---

{totalPages > 1 && (
  <nav class="pagination flex items-center justify-center gap-1 sm:gap-2" aria-label="Pagination">
    <!-- Previous Button -->
    {prevPage ? (
      <a
        href={getPageUrl(prevPage)}
        class="pagination-btn p-2 sm:px-4 sm:py-2 rounded-lg border border-border text-foreground-secondary hover:bg-background-secondary hover:text-foreground transition-all duration-200"
        aria-label="Previous page"
      >
        <svg class="w-5 h-5 sm:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </a>
    ) : (
      <span class="pagination-btn p-2 sm:px-4 sm:py-2 rounded-lg border border-border text-foreground-tertiary opacity-50 cursor-not-allowed">
        <svg class="w-5 h-5 sm:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <span class="hidden sm:inline">Previous</span>
      </span>
    )}
    
    <!-- Page Numbers -->
    <div class="flex items-center gap-1">
      {pageNumbers.map((page) => (
        page === '...' ? (
          <span class="px-2 text-foreground-tertiary">...</span>
        ) : page === currentPage ? (
          <span 
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-foreground text-background font-medium"
            aria-current="page"
            aria-label={`Current page, page ${page}`}
          >
            {page}
          </span>
        ) : (
          <a
            href={getPageUrl(page)}
            class="w-10 h-10 flex items-center justify-center rounded-lg border border-border text-foreground-secondary hover:bg-background-secondary hover:text-foreground transition-all duration-200"
            aria-label={`Go to page ${page}`}
          >
            {page}
          </a>
        )
      ))}
    </div>
    
    <!-- Next Button -->
    {nextPage ? (
      <a
        href={getPageUrl(nextPage)}
        class="pagination-btn p-2 sm:px-4 sm:py-2 rounded-lg border border-border text-foreground-secondary hover:bg-background-secondary hover:text-foreground transition-all duration-200"
        aria-label="Next page"
      >
        <svg class="w-5 h-5 sm:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="hidden sm:inline">Next</span>
      </a>
    ) : (
      <span class="pagination-btn p-2 sm:px-4 sm:py-2 rounded-lg border border-border text-foreground-tertiary opacity-50 cursor-not-allowed">
        <svg class="w-5 h-5 sm:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="hidden sm:inline">Next</span>
      </span>
    )}
  </nav>
)}
