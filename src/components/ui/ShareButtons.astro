---
/**
 * ShareButtons Component
 * 
 * Social sharing buttons (no external JS dependencies)
 */
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;

const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);

const shareLinks = [
  {
    name: 'Twitter',
    href: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
    icon: 'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z',
  },
  {
    name: 'LinkedIn',
    href: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
    icon: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z',
  },
  {
    name: 'Copy Link',
    href: '#',
    icon: 'M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1',
    isStroke: true,
    isCopyLink: true,
  },
];
---

<div class="share-buttons flex items-center gap-2">
  <span class="text-sm text-foreground-tertiary mr-1">Share:</span>
  {shareLinks.map((link) => (
    <a
      href={link.href}
      target={link.isCopyLink ? undefined : '_blank'}
      rel={link.isCopyLink ? undefined : 'noopener noreferrer'}
      class:list={[
        'share-btn p-2 rounded-lg border border-border text-foreground-tertiary',
        'hover:text-foreground hover:bg-background-secondary transition-all duration-200',
        link.isCopyLink && 'copy-link-btn'
      ]}
      aria-label={`Share on ${link.name}`}
      data-url={link.isCopyLink ? url : undefined}
    >
      <svg class="w-4 h-4" fill={link.isStroke ? 'none' : 'currentColor'} stroke={link.isStroke ? 'currentColor' : 'none'} viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={link.isStroke ? '2' : '0'} d={link.icon}/>
      </svg>
    </a>
  ))}
</div>

<script>
  // Copy link functionality
  document.querySelectorAll('.copy-link-btn').forEach((btn) => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      const url = (btn as HTMLAnchorElement).dataset.url;
      if (url) {
        try {
          await navigator.clipboard.writeText(url);
          // Show feedback
          const originalTitle = btn.getAttribute('aria-label');
          btn.setAttribute('aria-label', 'Copied!');
          btn.classList.add('copied');
          setTimeout(() => {
            btn.setAttribute('aria-label', originalTitle || 'Copy link');
            btn.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  });
</script>

<style>
  .share-btn.copied {
    background-color: var(--bg-secondary);
    color: var(--text-primary);
  }
</style>
