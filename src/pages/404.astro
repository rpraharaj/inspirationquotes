---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config/site';

const title = '404: Page Not Found';
const description = 'The page you are looking for does not exist. Browse our collection of inspirational quotes or return to the homepage.';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title={title} 
			description={description}
			noindex={true}
		/>
	</head>
	<body>
		<Header />
		<main class="container mx-auto px-4 py-16">
			<div class="max-w-2xl mx-auto text-center">
				<h1 class="text-6xl font-bold mb-4 text-gray-900 dark:text-white">404</h1>
				<h2 class="text-3xl font-bold mb-6 text-gray-800 dark:text-gray-200">Page Not Found</h2>
				
				<p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
					The page you're looking for doesn't exist or has been moved.
				</p>

				<div class="space-y-4">
					<a 
						href="/" 
						class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg transition-colors"
					>
						‚Üê Back to Home
					</a>
					
					<div class="mt-8">
						<p class="text-gray-600 dark:text-gray-400 mb-4">
							Or explore our popular quote collections:
						</p>
						<div class="flex flex-wrap gap-3 justify-center">
							{siteConfig.headerCategories.slice(0, 4).map((category) => (
								<a 
									href={`/categories/${category.slug}`}
									class="px-4 py-2 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-md transition-colors"
								>
									{category.name}
								</a>
							))}
						</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
